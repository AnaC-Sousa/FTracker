<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/head %>
    <link rel="stylesheet" type="text/css" href="/css/dashboard.css">
    <script src="/js/dashboard.js"></script>
</head>

<body>
    <main role="main" class="main">
        <% include ./partials/navbar %>
        <div class="container mb-5">
            <h1 class="dashboard__title--main mb-4">Dashboard</h1>
            <div class="dashboard d-flex flex-column flex-lg-row">
                <ul class="dashboard__sidebar nav bg-dark flex-row flex-lg-column justify-content-around" id="myTab"
                    role="tablist">
                    <li class="dashboard__sidebar__link-box col d-flex flex-column flex-row justify-content-center nav-item">
                        <a class="dashboard__sidebar__link nav-link active text-white d-flex flex-row flex-lg-column justify-content-center align-items-center" id="home-tab" data-toggle="tab"
                            href="#home" role="tab" aria-controls="home" aria-selected="true">Home</a>
                    </li>
                    <li class="dashboard__sidebar__link-box col d-flex flex-column flex-row justify-content-center nav-item">
                        <a class="dashboard__sidebar__link nav-link text-white d-flex flex-row flex-lg-column justify-content-center align-items-center" id="accounts-tab" data-toggle="tab"
                            href="#accounts" role="tab" aria-controls="accounts" aria-selected="false">Accounts</a>
                    </li>
                    <li class="dashboard__sidebar__link-box col d-flex flex-column flex-row justify-content-center nav-item">
                        <a class="dashboard__sidebar__link nav-link text-white d-flex flex-row flex-lg-column justify-content-center align-items-center" id="contact-tab" data-toggle="tab" href="#savings"
                            role="tab" aria-controls="savings" aria-selected="false">Savings</a>
                    </li>
                </ul>
                <div class="dashboard__content tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <% include ./partials/dashboard_tabs/home %>
                    </div>
                    <div class="tab-pane fade" id="accounts" role="tabpanel" aria-labelledby="accounts-tab">
                        <% include ./partials/dashboard_tabs/accounts %>
                    </div>
                    <div class="tab-pane fade" id="savings" role="tabpanel" aria-labelledby="savings-tab">
                            <% include ./partials/dashboard_tabs/savings %>
                    </div>
                </div>


            </div>


        </div>

        </div>
        </div>
        <% include ./partials/footer %>
    </main>



    <% include ./partials/script_foot %>

</body>

</html>